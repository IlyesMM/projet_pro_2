@model IEnumerable<projet_pro_2.Models.Personnel>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Personnels</title>
    <link rel="stylesheet" href="~/Content/Site.css">
</head>
<body>
    <header>
        <h1>Liste des Personnels</h1>
    </header>
    <main>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Téléphone</th>
                    <th>Mail</th>
                    <th>Service</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var personnel in Model)
                {
                    <tr>
                        <td>@personnel.nom</td>
                        <td>@personnel.prenom</td>
                        <td>@personnel.tel</td>
                        <td>@personnel.mail</td>
                        <td>@personnel.idservice</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = personnel.idpersonnel }) |
                            @Html.ActionLink("Delete", "Delete", new { id = personnel.idpersonnel })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>
